---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #0d0d0d;
        color: #ffffff;
      }

      main {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 60px 20px;
      }

      h1 {
        color: #00bfff;
        margin-bottom: 50px;
        font-size: 2.5em;
      }

      .dashboard {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
      }

      .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 180px;
        height: 60px;
        padding: 12px;
        font-size: 18px;
        color: white;
        background-color: #007ACC;
        text-decoration: none;
        border-radius: 12px;
        transition: 0.3s;
      }

      .btn:hover {
        background-color: #005A99;
      }

      .btn img {
        width: 28px;
        height: 28px;
        margin-right: 10px;
      }

      @media (max-width: 500px) {
        .btn {
          width: 140px;
          font-size: 16px;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Skynet17 Media Dashboard</h1>
      <div class="dashboard">
        <a class="btn" href="https://radarr.skynet17.com" target="_blank">
          <img src="/icons/radarr.png" alt="Radarr" />Radarr
        </a>
        <a class="btn" href="https://sonarr.skynet17.com" target="_blank">
          <img src="/icons/sonarr.png" alt="Sonarr" />Sonarr
        </a>
        <a class="btn" href="https://plex.skynet17.com" target="_blank">
          <img src="/icons/plex.png" alt="Plex" />Plex
        </a>
        <a class="btn" href="https://tautulli.skynet17.com" target="_blank">
          <img src="/icons/tautulli.png" alt="Tautulli" />Tautulli
        </a>
      </div>
    </main>
    <Footer />
  </body>
</html>
